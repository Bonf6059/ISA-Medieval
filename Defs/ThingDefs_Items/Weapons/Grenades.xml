<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="BaseMakeableGrenade" Name="ISA_Medieval_MakeableGrenade" Abstract="True">
		<recipeMaker Inherit="false">
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Smith</effectWorking>
			<soundWorking>Recipe_Smith</soundWorking>
			<recipeUsers Inherit="False">
				<li>VFEM2_AlchemicalWorkbench</li>
			</recipeUsers>
		</recipeMaker>
		<tickerType>Normal</tickerType>
		<techLevel>Medieval</techLevel>
		<thingCategories>
			<li>Grenades</li>
		</thingCategories>

<!-- Firepot -->
		
	</ThingDef>
		<ThingDef ParentName="ISA_Medieval_MakeableGrenade">
		<defName>ISA_Weapon_PotFire</defName>
		<label>fire pots</label>
		<description>An explosive clay pot designed to lit an area ablaze with its oil filled case.</description>
		<graphicData>
			<texPath>Weapons/Grenades/FirePot</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<uiIconScale>1.3</uiIconScale>
		<soundInteract>Interact_MolotovCocktail</soundInteract>
		<statBases>
			<Mass>1</Mass>
			<RangedWeapon_Cooldown>2.66</RangedWeapon_Cooldown>
			<WorkToMake>6000</WorkToMake>
		</statBases>
		<costList>
			<Cloth>5</Cloth>
			<Chemfuel>20</Chemfuel>
			<Steel>1</Steel>
		</costList>
		<weaponTags>
			<li>ISA_Grenade_PotFire</li>
		</weaponTags>
		<verbs>
			<li>
				<label>throw fire pots</label>
				<verbClass>Verb_LaunchProjectile</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<range>12.9</range>
				<forcedMissRadius>1.9</forcedMissRadius>
				<warmupTime>1.5</warmupTime>
				<noiseRadius>4</noiseRadius>
				<soundCast>ThrowMolotovCocktail</soundCast>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
				<defaultProjectile>ISA_Proj_PotFire</defaultProjectile>
				<rangedFireRulepack>Combat_RangedFire_Thrown</rangedFireRulepack>
			</li>
		</verbs>
		<comps>
			<li Class="CompProperties_Explosive">
				<explosiveRadius>2.66</explosiveRadius>
				<explosiveDamageType>Flame</explosiveDamageType>
				<requiredDamageTypeToExplode>Flame</requiredDamageTypeToExplode>
				<preExplosionSpawnThingDef>Filth_FlammableBile</preExplosionSpawnThingDef>
			</li>
		</comps>
	</ThingDef>

	<ThingDef ParentName="BaseIncendiaryProjectile">
		<defName>ISA_Proj_PotFire</defName>
		<label>fire pot</label>
		<graphicData>
			<texPath>Weapons/Grenades/FirePot</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
			<explosionRadius>1.1</explosionRadius>
			<damageDef>Flame</damageDef>
			<!-- Use default damage from explosion def -->
			<preExplosionSpawnThingDef>Filth_FlammableBile</preExplosionSpawnThingDef>
			<ai_IsIncendiary>true</ai_IsIncendiary>
			<shadowSize>0.6</shadowSize>
		</projectile>
	</ThingDef>

	<!-- Firepot Belt -->

		<ThingDef ParentName="ApparelNoQualityBase">
		<defName>ISA_Apparel_FirePotBelt</defName>
		<label>fire pot belt</label>
		<description>A utility belt designed to carry throwable fire pots, allowing the wearer to ignite areas or enemies from a distance</description>
		<techLevel>Medieval</techLevel>
		<comps>
			<li Class="CompProperties_ApparelReloadable">
				<maxCharges>3</maxCharges>
				<ammoDef>ISA_Weapon_PotFire</ammoDef>
				<ammoCountToRefill>1</ammoCountToRefill>
				<baseReloadTicks>60</baseReloadTicks>
				<soundReload>Standard_Reload</soundReload>
				<hotKey>Misc4</hotKey>
				<chargeNoun>fire</chargeNoun>
				<displayGizmoWhileUndrafted>false</displayGizmoWhileUndrafted>
			</li>
		</comps>
		<verbs>
			<li>
				<label>throw fire pot</label>
				<verbClass>Verb_LaunchProjectileStatic</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<onlyManualCast>True</onlyManualCast>
				<range>12.9</range>
				<forcedMissRadius>1.9</forcedMissRadius>
				<warmupTime>1.5</warmupTime>
				<noiseRadius>4</noiseRadius>
				<ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
				<soundCast>ThrowGrenade</soundCast>
				<drawHighlightWithLineOfSight>true</drawHighlightWithLineOfSight>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
				<defaultProjectile>ISA_Proj_PotFire</defaultProjectile>
				<rangedFireRulepack>Combat_RangedFire_Thrown</rangedFireRulepack>
			</li>
		</verbs>
		<recipeMaker>
			<unfinishedThingDef>UnfinishedPack</unfinishedThingDef>
			<recipeUsers>
				<li>ElectricSmithy</li>
				<li>FueledSmithy</li>
				<li>VFEM2_AlchemicalWorkbench</li>
			</recipeUsers>
			<useIngredientsForColor>false</useIngredientsForColor>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Smith</effectWorking>
			<soundWorking>Recipe_Smith</soundWorking>
			<skillRequirements>
				<Crafting>3</Crafting>
			</skillRequirements>
		</recipeMaker>
		<costList>
			<ISA_Weapon_PotFire>1</ISA_Weapon_PotFire>
		</costList>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/Utility/FirePots</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<tickerType>Normal</tickerType>
		<statBases>
			<WorkToMake>500</WorkToMake>
			<Mass>3</Mass>
			<Flammability>0.4</Flammability>
			<EquipDelay>2</EquipDelay>
			<ArmorRating_Sharp>0.0001</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.0001</ArmorRating_Blunt>
		</statBases>
		<thingCategories>
			<li>ApparelUtility</li>
		</thingCategories>
		<generateAllowChance>0.15</generateAllowChance>
		<apparel>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/Utility/FirePotBelt</wornGraphicPath>
			<wornGraphicData>
				<renderUtilityAsPack>true</renderUtilityAsPack>
				<north>
					<offset>(-0.10,-0.25)</offset>
					<hulk><offset>(-0.1,-0.15)</offset></hulk>
					<fat><offset>(-0.22,-0.0)</offset></fat>
					<thin><offset>(0.0,-0.0)</offset></thin>
				</north>
				<south>
					<offset>(0.15,-0.30)</offset>
					<hulk><offset>(-0.0,-0.10)</offset></hulk>
					<fat><offset>(0.1,-0.05)</offset></fat>
					<thin><offset>(-0.10,-0.0)</offset></thin>
				</south>
				<east>
					<offset>(-0.15,-0.25)</offset>
					<hulk><offset>(-0.0,-0.15)</offset></hulk>
					<fat><offset>(-0.2,-0.10)</offset></fat>
				</east>
				<west>
					<offset>(0.15,-0.25)</offset>
					<hulk><offset>(-0.0,-0.15)</offset></hulk>
					<fat><offset>(0.05,-0.10)</offset></fat>
				</west>
				<male><scale>(0.6,0.6)</scale></male>
				<female><scale>(0.6,0.6)</scale></female>
				<thin><scale>(0.6,0.6)</scale></thin>
				<hulk><scale>(0.7,0.7)</scale></hulk>
				<fat><scale>(0.7,0.7)</scale></fat>
			</wornGraphicData>
			<drawData>
				<dataNorth><layer>90</layer></dataNorth>
				<dataSouth><layer>40</layer></dataSouth>
			</drawData>
			<careIfWornByCorpse>false</careIfWornByCorpse>
			<careIfDamaged>false</careIfDamaged>
			<wearPerDay>0</wearPerDay>
			<bodyPartGroups>
				<li>Waist</li>
			</bodyPartGroups>
			<layers>
				<li>Belt</li>
			</layers>
			<tags>
				<li>ISA_FirePotBelt</li>
			</tags>
		</apparel>
		<modExtensions>
			<li Class="VEF.Planet.EquipmentOffsetConditions">
				<techLevels>
					<li>Neolithic</li>
					<li>Medieval</li>
				</techLevels>
			</li>
		</modExtensions>
	</ThingDef>


</Defs>
