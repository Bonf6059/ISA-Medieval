		<!-- Carrot Cake -->
	
	<ThingDef ParentName="MealCooked">
		<defName>ISA_CarrotCake</defName>
		<label>carrot cake</label>
		<description>A moist and flavorful cake crafted from freshly grated carrots, infused with warm spices, and enveloped in a luscious cream cheese frosting. A classic indulgence perfect for any occasion.</description>
		<graphicData>
			<texPath>Meal/Cakes/CarrotCake</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
