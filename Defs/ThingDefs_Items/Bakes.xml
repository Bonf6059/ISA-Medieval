<?xml version="1.0" encoding="utf-8" ?>
<Defs>  

<!-- Flour -->
  
	<ThingDef ParentName="RoughPlantBase">
		<defName>ISA_Flour</defName>
		<label>flour</label>
		<description>Flour used in baking. Hay flour takes a very long time to go bad, if stored in a dry environment.</description>
		<soundInteract>Grain_Drop</soundInteract>
		<soundDrop>Grain_Drop</soundDrop>	
		<graphicData>
			<texPath>Items/Flour/Flour</texPath>
		</graphicData>
		<statBases>
			<MarketValue>1.9</MarketValue>
			<Nutrition>0.05</Nutrition>
			<Flammability>1.3</Flammability>
		</statBases>
		<thingCategories>
			<li>PlantMatter</li>
		</thingCategories>
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>100</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
		</comps>
		<ingestible>
			<preferability>NeverForNutrition</preferability>
		</ingestible>    
	</ThingDef>

<!-- Bakes -->

  	<!-- Berry Pie -->
	<ThingDef ParentName="MealCooked">
		<defName>ISA_BerryPie</defName>
		<label>berry pie</label>
		<description>A delicious fruit-tart pie, consisting of a flakey sugar crust layer with a filling of pureed Berry, topped with a light lemon glaze.</description>
		<graphicData>
			<texPath>Meal/Cakes/BerryPie</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>35</MarketValue>
			<Nutrition>0.75</Nutrition>
		</statBases>
		<ingestible>
			<preferability>MealLavish</preferability>
			<optimalityOffsetHumanlikes>17</optimalityOffsetHumanlikes>
			<optimalityOffsetFeedingAnimals>-30</optimalityOffsetFeedingAnimals>
		</ingestible>
		<rotatable>false</rotatable>
	</ThingDef>

	<!-- Apple Pie -->
	
	<ThingDef ParentName="MealCooked">
		<defName>ISA_ApplePie</defName>
		<label>apple pie</label>
		<description>A pie that uses sliced apples for its principal filling ingredient, mixed together with profound spices. Typically covered with a lattice patterned crust then sprinkled with sugar for its finish.</description>
		<graphicData>
			<texPath>Meal/Cakes/ApplePie</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>24</MarketValue>
			<Nutrition>0.9</Nutrition>
			<Mass>0.5</Mass>
		</statBases>
		<ingestible>
			<preferability>MealFine</preferability>
			<optimalityOffsetHumanlikes>15</optimalityOffsetHumanlikes>
		</ingestible>
		<rotatable>false</rotatable>
	</ThingDef>

	<!-- Pumpkin Pie -->
	
	<ThingDef ParentName="MealCooked">
		<defName>ISA_PumpkinPie</defName>
		<label>pumpking pie</label>
		<description>A dense, rich pie made from mashed pumpkin mixed with strong spices, layered atop a sweet, flakey crust. A fall-favorite desert.</description>
