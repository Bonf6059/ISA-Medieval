		<graphicData>
			<texPath>Pawn/HumanLike/Apparel/Attachments/RunesAndSigils/RunesAndSigils</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<recipeMaker>
			<skillRequirements>
				<Crafting>4</Crafting>
			</skillRequirements>
		</recipeMaker>
		<costList>
			<ISA_Leather_Alp>20</ISA_Leather_Alp>
		</costList>	
