<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- Herbal Extract -->
	
	<ThingDef ParentName="MedicineBase">
		<defName>ISA_HerbalExtract</defName>
		<label>herbal extract</label>
		<description>A concentrated mixture of herbal essence extracted by grinding multiple raw herbs. It is less potent than industrial pharmaceuticals, but much better than nothing.</description>
		<possessionCount>3</possessionCount>
		<graphicData>
			<texPath>Items/Resources/Drugs/HerbalExtract</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
			<drawSize>1</drawSize>
		</graphicData>
		<techLevel>Neolithic</techLevel>
		<statBases>
			<Mass>0.35</Mass>
			<Flammability>1.3</Flammability>
			<MedicalPotency>0.85</MedicalPotency>
			<MedicalQualityMax>0.85</MedicalQualityMax>
			<DeteriorationRate>6</DeteriorationRate>
			<WorkToMake>400</WorkToMake>
		</statBases>
		<tickerType>Rare</tickerType>
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>150</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
		</comps>
		<allowedArchonexusCount>10</allowedArchonexusCount>
	</ThingDef>

<!-- Paregoric -->
	
	<ThingDef ParentName="MedicineBase">
		<defName>ISA_Paregoric</defName>
		<label>paregoric</label>
		<description>A potent tincture made from mindwort for its healing properties and opium for pain relief, but carries a risk of addiction with prolonged use.</description>
		<possessionCount>10</possessionCount>
		<descriptionHyperlinks><HediffDef>ISA_High_Paregoric</HediffDef></descriptionHyperlinks>
		<graphicData>
			<texPath>Items/Resources/Drugs/Paregoric</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<socialPropernessMatters>false</socialPropernessMatters>
		<rotatable>false</rotatable>
		<statBases>
			<MarketValue>235</MarketValue> <!-- (Mixture Market value / cauldron drop ammount) + 20-->
			<Mass>0.5</Mass>
			<Flammability>0.1</Flammability>
		</statBases>
		<techLevel>Medieval</techLevel>
		<ingestible>
    		<foodType>Fluid</foodType>
			<nurseable>true</nurseable>
			<ingestHoldOffsetStanding>
				<northDefault>
					<offset>(0.18,0,0)</offset>
				</northDefault>
			</ingestHoldOffsetStanding>
			<ingestHoldUsesTable>false</ingestHoldUsesTable>
			<ingestCommandString>Apply {0}</ingestCommandString>
			<ingestReportString>Applying {0}.</ingestReportString>
			<preferability>NeverForNutrition</preferability>
			<drugCategory>Medical</drugCategory>
			<outcomeDoers>
				<li Class="IngestionOutcomeDoer_GiveHediff">
				<hediffDef>ISA_High_Paregoric</hediffDef>
				<severity>1.0</severity>
				</li>
			</outcomeDoers>
		</ingestible>
		
		<comps>
		<li Class="CompProperties_Drug">
			<listOrder>1000</listOrder>
			<overdoseSeverityOffset>0.08~0.14</overdoseSeverityOffset>
		</li>
		</comps>
	</ThingDef>
  
  <HediffDef>
    <defName>ISA_High_Paregoric</defName>
    <hediffClass>Hediff_High</hediffClass>
    <label>paregoric</label>
    <description>A temporary state of pain relief and increased healing.</description>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-1.5</severityPerDay>
        <showHoursToRecover>true</showHoursToRecover>
      </li>
    </comps>
      <stages>
        <li>
			<painFactor>0.75</painFactor>
			<statOffsets>
				<InjuryHealingFactor>0.25</InjuryHealingFactor>
				<ImmunityGainSpeed>0.15</ImmunityGainSpeed>
			</statOffsets>
        </li>
		
      </stages>
  </HediffDef>

	<ThoughtDef>
		<defName>ISA_Thought_Paregoric</defName>
		<workerClass>ThoughtWorker_Hediff</workerClass>
		<hediff>ISA_High_Paregoric</hediff>
		<validWhileDespawned>true</validWhileDespawned>
		<developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
		<stages>
		<li>
			<label>drank paregoric</label>
			<description>Drinking this medicine ensures me of my health.</description>
			<baseMoodEffect>2</baseMoodEffect>
		</li>
		</stages>
	</ThoughtDef>

  	  <!--=============== Oil ================-->
  
  <ThingDef ParentName="MedicineBase">
    <defName>ISA_HealingOil</defName>
    <label>healing oil</label>
    <description>The potent oil extracted from multiple plants, it is often applied on the body to help the body recover from various diseases and traumas.</description>

    <graphicData>
      <texPath>Items/Resources/Drugs/HealingOil</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <rotatable>false</rotatable>
	
    <statBases>
	  <MarketValue>10</MarketValue>
      <Mass>0.05</Mass>
      <DeteriorationRate>6</DeteriorationRate>
    </statBases>
    <techLevel>Medieval</techLevel>
	
    <ingestible>
      <foodType>Fluid</foodType>
      <nurseable>true</nurseable>
      <drugCategory>Medical</drugCategory>
      <ingestHoldOffsetStanding>
        <northDefault>
          <offset>(0.18,0,0)</offset>
        </northDefault>
      </ingestHoldOffsetStanding>
      <ingestHoldUsesTable>false</ingestHoldUsesTable>
      <ingestCommandString>Apply {0}</ingestCommandString>
      <ingestReportString>Applying {0}.</ingestReportString>
	  <preferability>NeverForNutrition</preferability>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>ISA_RapidRecovery</hediffDef>
          <severity>1</severity>
        </li>
      </outcomeDoers>
    </ingestible>

    <comps>
      <li Class="CompProperties_Drug">
        <listOrder>1000</listOrder>
        <overdoseSeverityOffset>0.08~0.14</overdoseSeverityOffset>
      </li>
    </comps>
	
  </ThingDef>
  
  <HediffDef>
    <defName>ISA_RapidRecovery</defName>
    <label>healing oil</label>
    <description>Healing oil applied on the body, it helps the body recover from injuries and diseases quicker.</description>
    <hediffClass>Hediff_High</hediffClass>
    <defaultLabelColor>(111,142,117)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
	
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-3.0</severityPerDay>
        <showHoursToRecover>true</showHoursToRecover>
      </li>
    </comps>
      <stages>
        <li>
          <statFactors>
		    <ImmunityGainSpeed>1.1</ImmunityGainSpeed>
            <InjuryHealingFactor>1.2</InjuryHealingFactor>
          </statFactors>
        </li>
      </stages>
  </HediffDef>

  <!--=============== Scents ====================-->

  <ThingDef ParentName="ResourceBase" Name="ISA_CriviceScentBase" Abstract="True">
    <thingClass>ThingWithComps</thingClass>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <useHitPoints>true</useHitPoints>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <Mass>0.2</Mass>
      <DeteriorationRate>2.0</DeteriorationRate>
      <Flammability>0.2</Flammability>
    </statBases>
    <techLevel>Medieval</techLevel>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
  </ThingDef>

  <ThingDef ParentName="ISA_CriviceScentBase">
    <defName>ISA_CriviceScent</defName>
    <label>crivice scent</label>
    <description>A mixture of bone marrow extracted from the antlers of a goldilox and several herbs and medicines. It is consumed by burning the concoction and inhaling the fumes, which drastically increase one's ability to regenerate and heal from any injury.\n\n It can boost massively the regenerative ability of the body to the point where it can form new limbs or organs as needed.</description>
	  <graphicData>
      <texPath>Items/Resources/Drugs/CriviceScent</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <stackLimit>10</stackLimit>
    <statBases>
      <MarketValue>1300</MarketValue>
    </statBases>
    <thingCategories>
      <li>Drugs</li>
    </thingCategories>
    <tradeability>Sellable</tradeability>
    <comps>
      <li Class="CompProperties_Usable">
        <useJob>UseItem</useJob>
        <useLabel>Use {0_label}</useLabel>
        <useDuration>600</useDuration>
        <showUseGizmo>true</showUseGizmo>
      </li>
      <li Class="CompProperties_UseEffect">
        <compClass>CompUseEffect_FixWorstHealthCondition</compClass>
      </li>
  <!--    <li Class="CompProperties_UseEffectPlaySound">
        <soundOnUsed>MechSerumUsed</soundOnUsed>
      </li>	-->
      <li Class="CompProperties_UseEffectDestroySelf" />
    </comps>
    <thingSetMakerTags>
      <li>RewardStandardCore</li>
    </thingSetMakerTags>
  </ThingDef>
  
  <RecipeDef>
    <defName>AdministerCriviceScent</defName>
    <label>administer crivice scent</label>
    <description>Administer a crivice scent.</description>
    <workerClass>Recipe_AdministerUsableItem</workerClass>
    <jobString>Administering crivice scent.</jobString>
    <targetsBodyPart>false</targetsBodyPart>
    <anesthetize>false</anesthetize>
    <workAmount>600</workAmount>
    <dontShowIfAnyIngredientMissing>true</dontShowIfAnyIngredientMissing>
    <surgeryOutcomeEffect IsNull="True"/>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ISA_CriviceScent</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ISA_CriviceScent</li>
      </thingDefs>
    </fixedIngredientFilter>
  </RecipeDef>

