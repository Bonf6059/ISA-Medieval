<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Cheese -->
	<ThingDef ParentName="MealBase" Name="ISA_CheeseBase" Abstract="True">
		<thingClass>ThingWithComps</thingClass>
		<tickerType>Rare</tickerType>
		<statBases>
			<MarketValue>10</MarketValue>
			<Nutrition>0.85</Nutrition>
		</statBases>
		<ingestible>
			<joy>0.10</joy>
			<joyKind>Gluttonous</joyKind>
			<foodType>Processed</foodType>
			<preferability>MealSimple</preferability>
			<optimalityOffsetHumanlikes>15</optimalityOffsetHumanlikes>
			<optimalityOffsetFeedingAnimals>-10</optimalityOffsetFeedingAnimals>
		</ingestible>
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>45</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
			<li>
				<compClass>CompQuality</compClass>
			</li>
			<li MayRequire="vanillaexpanded.vcooke" Class="VEF.Cooking.CompProperties_StackByQuality"/>
		</comps>
		<rotatable>false</rotatable>
<!--		<researchPrerequisites>
			<li>ISA_Presser</li>
		</researchPrerequisites> -->	
	</ThingDef>

	<ThingDef ParentName="ISA_CheeseBase">
		<defName>ISA_MealCheese</defName>
		<label>cheese</label>
		<description>A sharp-tasting wheel of cheese, created by a special process of purposely curdling animal milk. It makes for both a tasty treat on its own, as well as a versatile ingredient in meals.</description>
		<graphicData>
			<texPath>Food/Cheese/Cheese</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
			<drawSize>1</drawSize>
		</graphicData>
	</ThingDef>

	<ThingDef ParentName="ISA_CheeseBase">
		<defName>ISA_MealMufftonCheese</defName>
		<label>muffton cheese</label>
		<description>A sharp-tasting wheel of cheese, created by a special process of purposely curdling animal milk. It makes for both a tasty treat on its own, as well as a versatile ingredient in meals.</description>
		<graphicData>
			<texPath>Item/Meal/MufftonCheese</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
			<drawSize>1</drawSize>
		</graphicData>
	</ThingDef>

	<ThingDef ParentName="ISA_CheeseBase">
		<defName>ISA_MealGoldiloxCheese</defName>
		<label>regal cheese</label>
		<description>A sharp-tasting wheel of soft cheese, created by a special process of purposely curdling goldilox milk. Its golden rind and soft core which melts in the mouth it is a cheese fit for kings, as well as a versatile ingredient in meals.</description>		<graphicData>
			<texPath>Item/Meal/GoldfortCheese</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
			<drawSize>1</drawSize>
		</graphicData>
	</ThingDef>

</Defs>
