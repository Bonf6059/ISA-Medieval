<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- Herbal Extract -->
	
	<ThingDef ParentName="MedicineBase">
		<defName>ISA_HerbalExtract</defName>
		<label>herbal extract</label>
		<description>A concentrated mixture of herbal essence extracted by grinding multiple raw herbs. It is less potent than industrial pharmaceuticals, but much better than nothing.</description>
		<possessionCount>3</possessionCount>
		<graphicData>
			<texPath>Items/Resources/Drugs/HerbalExtract</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
			<drawSize>1</drawSize>
		</graphicData>
		<techLevel>Neolithic</techLevel>
		<statBases>
			<Mass>0.35</Mass>
			<Flammability>1.3</Flammability>
			<MedicalPotency>0.85</MedicalPotency>
			<MedicalQualityMax>0.85</MedicalQualityMax>
			<DeteriorationRate>6</DeteriorationRate>
			<WorkToMake>400</WorkToMake>
		</statBases>
		<tickerType>Rare</tickerType>
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>150</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
		</comps>
		<allowedArchonexusCount>10</allowedArchonexusCount>
	</ThingDef>

<!-- Paregoric -->
	
	<ThingDef ParentName="MakeableDrugPillBase">
		<defName>ISA_Paregoric</defName>
		<label>paregoric</label>
		<description>A potent tincture made from mindwort for its healing properties and opium for pain relief, but carries a risk of addiction with prolonged use.</description>
		<possessionCount>10</possessionCount>
		<descriptionHyperlinks><HediffDef>ISA_High_Paregoric</HediffDef></descriptionHyperlinks>
		<graphicData>
			<texPath>/Items/Resources/Drugs/Paregoric</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<socialPropernessMatters>false</socialPropernessMatters>
		<rotatable>false</rotatable>
		<statBases>
			<MarketValue>235</MarketValue> <!-- (Mixture Market value / cauldron drop ammount) + 20-->
			<Mass>0.5</Mass>
			<Flammability>0.1</Flammability>
		</statBases>
		<techLevel>Medieval</techLevel>
		<ingestible>
			<drugCategory>Medical</drugCategory>
			<outcomeDoers>
				<li Class="IngestionOutcomeDoer_GiveHediff">
				<hediffDef>ISA_High_Paregoric</hediffDef>
				<severity>1.0</severity>
				</li>
			</outcomeDoers>
		</ingestible>
		
		<comps>
		<li Class="CompProperties_Drug">
			<listOrder>1000</listOrder>
			<overdoseSeverityOffset>0.08~0.14</overdoseSeverityOffset>
		</li>
		</comps>
	</ThingDef>
  
  <HediffDef>
    <defName>ISA_High_Paregoric</defName>
    <hediffClass>Hediff_High</hediffClass>
    <label>paregoric</label>
    <description>A temporary state of pain relief and increased healing.</description>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-1.5</severityPerDay>
        <showHoursToRecover>true</showHoursToRecover>
      </li>
    </comps>
      <stages>
        <li>
			<painFactor>0.75</painFactor>
			<statOffsets>
				<InjuryHealingFactor>0.25</InjuryHealingFactor>
				<ImmunityGainSpeed>0.15</ImmunityGainSpeed>
			</statOffsets>
        </li>
		
      </stages>
  </HediffDef>

	<ThoughtDef>
		<defName>ISA_Thought_Paregoric</defName>
		<workerClass>ThoughtWorker_Hediff</workerClass>
		<hediff>ISA_High_Paregoric</hediff>
		<validWhileDespawned>true</validWhileDespawned>
		<developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
		<stages>
		<li>
			<label>drank paregoric</label>
			<description>Drinking this medicine ensures me of my health.</description>
			<baseMoodEffect>2</baseMoodEffect>
		</li>
		</stages>
	</ThoughtDef>

  	  <!--=============== Oil ================-->
  
  <ThingDef ParentName="DrugBase">
    <defName>ISA_HealingOil</defName>
    <label>healing oil</label>
    <description>The potent oil extracted from multiple plants, it is often applied on the body to help the body recover from various diseases and traumas.</description>

    <graphicData>
      <texPath>Item/BarogothOil</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <rotatable>false</rotatable>
	
    <statBases>
	  <MarketValue>10</MarketValue>
      <Mass>0.05</Mass>
      <DeteriorationRate>6</DeteriorationRate>
    </statBases>
    <techLevel>Medieval</techLevel>
	
    <ingestible>
      <foodType>Fluid</foodType>
      <nurseable>true</nurseable>
      <drugCategory>Medical</drugCategory>
      <ingestHoldOffsetStanding>
        <northDefault>
          <offset>(0.18,0,0)</offset>
        </northDefault>
      </ingestHoldOffsetStanding>
      <ingestHoldUsesTable>false</ingestHoldUsesTable>
      <ingestCommandString>Apply {0}</ingestCommandString>
      <ingestReportString>Applying {0}.</ingestReportString>
	  
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>ISA_RapidRecovery</hediffDef>
          <severity>1</severity>
        </li>
      </outcomeDoers>
    </ingestible>

    <comps>
      <li Class="CompProperties_Drug">
        <listOrder>1000</listOrder>
        <overdoseSeverityOffset>0.08~0.14</overdoseSeverityOffset>
      </li>
    </comps>
	
  </ThingDef>
  
  <HediffDef>
    <defName>ISA_RapidRecovery</defName>
    <label>healing oil</label>
    <description>Healing oil applied on the body, it helps the body recover from injuries and diseases quicker.</description>
    <hediffClass>Hediff_High</hediffClass>
    <defaultLabelColor>(111,142,117)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
	
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-3.0</severityPerDay>
        <showHoursToRecover>true</showHoursToRecover>
      </li>
    </comps>
      <stages>
        <li>
          <statFactors>
		    <ImmunityGainSpeed>1.1</ImmunityGainSpeed>
            <InjuryHealingFactor>1.2</InjuryHealingFactor>
          </statFactors>
        </li>
      </stages>
  </HediffDef>

</Defs>

