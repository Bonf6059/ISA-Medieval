<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- Unfertilized Egg -->
  
	<ThingDef ParentName="EggUnfertBase">
		<defName>MF_EggUnfertilized</defName>
		<label>megafauna egg (unfert.)</label>
		<description>An unfertilized megafauna egg. It can be eaten raw, but it's much, much better cooked.</description>
		<graphicData>
			<color>(228,185,135)</color>
		</graphicData>
		<statBases>
			<MarketValue>7.0</MarketValue>
		</statBases>
	</ThingDef>

  <!-- Doedicurus Shell -->
  
  <ThingDef ParentName="ResourceBase">
		<defName>DoedicurusShell</defName>
		<label>doedicurus shell</label>
		<description>A doedicurus' shell. It's remarkably durable but humans have no use for it. However, some collectors are still willing to pay a lot for one.</description>
		<graphicData>
			<texPath>Items/Megafauna/megafauna_doedricusshell</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<color>(177,161,132)</color>
		</graphicData>
		<resourceReadoutPriority>Middle</resourceReadoutPriority>
		<stackLimit>1</stackLimit>
		<useHitPoints>true</useHitPoints>
		<statBases>
			<MarketValue>800</MarketValue>
			<MaxHitPoints>100</MaxHitPoints>
			<Mass>10</Mass>
		</statBases>
		<thingCategories>
			<li>Items</li>
		</thingCategories>
		<drawGUIOverlay>false</drawGUIOverlay>
		<tradeTags>
			<li>ExoticMisc</li>
		</tradeTags>
		<thingSetMakerTags>
			<li>AnimalPart</li>
		</thingSetMakerTags>
	</ThingDef>

  <!-- Elasmotherium Horn -->
  
	<ThingDef ParentName="ResourceVerbBase">
		<defName>ElasmotheriumHorn</defName>
		<label>elasmotherium horn</label>
		<description>An elasmotherium's horn. Not nearly as deadly in human hands, but can still prove to be a relatively decent weapon.</description>
		<graphicData>
			<texPath>Items/Megafauna/megafauna_elasmotheriumhorn</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<equippedAngleOffset>-20</equippedAngleOffset>
		<statBases>
			<MarketValue>1500</MarketValue>
			<MaxHitPoints>150</MaxHitPoints>
			<Mass>4</Mass>
			<Flammability>1</Flammability>
			<DeteriorationRate>0.3</DeteriorationRate>
		</statBases>
		<resourceReadoutPriority>Middle</resourceReadoutPriority>
		<stackLimit>10</stackLimit>
		<tools>
			<li>
				<label>point</label>
				<capacities>
					<li>Scratch</li>
					<li>Stab</li>
				</capacities>
				<power>23</power>
				<cooldownTime>2.75</cooldownTime>
			</li>
			<li>
				<label>base</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>14</power>
				<cooldownTime>2.75</cooldownTime>
			</li>
		</tools>
		<thingCategories>
			<li>Items</li>
		</thingCategories>
		<tradeTags>
			<li>ExoticMisc</li>
		</tradeTags>
		<thingSetMakerTags>
			<li>AnimalPart</li>
		</thingSetMakerTags>
	</ThingDef>

    <!-- Elasmotherium Wool -->
  
  <ThingDef ParentName="WoolBase">
		<defName>ElasmotheriumWool</defName>
		<label>elasmotherium wool</label>
		<description>Wool from an elasmotherium. The most exclusive kind of wool imaginable. It's as great for cold weather as it is beautiful.</description>
		<graphicData>
			<color>(60,50,41)</color>
		</graphicData>
		<stuffProps>
			<color>(60,50,41)</color>
			<commonality>0.08</commonality>
		</stuffProps>
		<statBases>
			<StuffPower_Armor_Sharp>0.95</StuffPower_Armor_Sharp>
			<StuffPower_Insulation_Cold>45</StuffPower_Insulation_Cold>
			<StuffPower_Insulation_Heat>17</StuffPower_Insulation_Heat>
			<MarketValue>4.5</MarketValue>
		</statBases>
	</ThingDef>

