<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- Abstract -->
	<RecipeDef Name="ISA_Make_DrugAlchemy" Abstract="True">
		<workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
		<workSkill>Intellectual</workSkill>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Brewing</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<targetCountAdjustment>1</targetCountAdjustment>
		<recipeUsers>
			<li>VFEM2_AlchemicalWorkbench</li>
		</recipeUsers>
	</RecipeDef>

<!-- Herbal extract -->
	
	<RecipeDef ParentName="ISA_Make_DrugAlchemy">
		<defName>ISA_Make_HerbalExtract</defName>
		<label>make herbal extract</label>
		<description>Make herbal extract.</description>
		<jobString>Making herbal extract.</jobString>
		<workAmount>600</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>MedicineHerbal</li>
						<li>ISA_Mindwort</li>
						<li>ISA_FlyAgaric</li>
						<li>ISA_Poppy</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>MedicineHerbal</li>
				<li>ISA_Mindwort</li>
				<li>ISA_FlyAgaric</li>
				<li>ISA_Poppy</li>
			</thingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<thingDefs>
				<li>MedicineHerbal</li>
				<li>ISA_Mindwort</li>
				<li>ISA_FlyAgaric</li>
				<li>ISA_Poppy</li>
			</thingDefs>
		</defaultIngredientFilter>
		<products>
			<ISA_HerbalExtract>1</ISA_HerbalExtract>
		</products>
	</RecipeDef>

