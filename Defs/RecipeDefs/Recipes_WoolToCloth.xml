<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef>
		<defName>ISA_MakeClothFromWool</defName>
		<label>weave cloth from wool</label>
		<description>Weave wool threads together to create a cloth like material.</description>
		<targetCountAdjustment>50</targetCountAdjustment>
		<jobString>Weaving cloth.</jobString>
		<recipeUsers>
			<li>ElectricTailoringBench</li>
			<li>HandTailoringBench</li>
			<li>CraftingSpot</li>
		</recipeUsers>
		<effectWorking>Tailor</effectWorking>
		<workSkill>Crafting</workSkill>
		<soundWorking>Recipe_Tailor</soundWorking>
		<workAmount>500</workAmount>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Wools</li>
					</categories>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Wools</li>
			</categories>
		</fixedIngredientFilter>
		<products>
			<Cloth>10</Cloth>
		</products>
	</RecipeDef>

	<RecipeDef>
		<defName>ISA_MakeClothFromWoolBulk</defName>
