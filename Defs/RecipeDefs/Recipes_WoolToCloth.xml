		<workSkill>Crafting</workSkill>
		<soundWorking>Recipe_Tailor</soundWorking>
		<workAmount>2250</workAmount>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Wools</li>
					</categories>
				</filter>
				<count>50</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Wools</li>
			</categories>
		</fixedIngredientFilter>
		<products>
			<Cloth>50</Cloth>
		</products>
	</RecipeDef>

</Defs>
