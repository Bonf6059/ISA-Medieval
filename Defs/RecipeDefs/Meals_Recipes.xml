<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RecipeDef Name="ISA_CookStewBase" Abstract="True">
    <fixedIngredientFilter>
      <specialFiltersToDisallow>
        <li>AllowPlantFood</li>
      </specialFiltersToDisallow>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <disallowedCategories>
        <li>EggsFertilized</li>
      </disallowedCategories>
      <disallowedThingDefs>
        <li>Meat_Human</li>
        <li>Meat_Megaspider</li>
        <li>InsectJelly</li>
        <li MayRequire="Ludeon.RimWorld.Anomaly">Meat_Twisted</li>
      </disallowedThingDefs>
    </defaultIngredientFilter>
    <workSkill>Cooking</workSkill>
  </RecipeDef>

<!-- Soups and Stew -->
	
	<RecipeDef ParentName="ISA_CookStewBase">
		<defName>ISA_MakeUncookedStew</defName>
		<label>Cook stew</label>
		<description>Chop raw meat and vegetables in uncooked stew.</description>
		<jobString>Cooking stew.</jobString>
    <workAmount>350</workAmount>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>FoodRaw</li>
					</categories>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>FoodRaw</li>
			</categories>
		</fixedIngredientFilter>
		<products>
			<ISA_UncookedStew>1</ISA_UncookedStew>
		</products>
	</RecipeDef>

	<RecipeDef ParentName="ISA_CookStewBase">
		<defName>ISA_MakeUncookedSoup</defName>
