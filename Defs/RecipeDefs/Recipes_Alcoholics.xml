<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- grape wine must -->
  
 	<RecipeDef>
		<defName>ISA_MakeMustWine</defName>
		<label>make grape must</label>
		<description>Make grape must by crushing grapes. Needs to undergo fermentation in order to become wine.</description>
		<jobString>Making grape must.</jobString>
		<workAmount>1000</workAmount>
		<recipeUsers>
			<li>Brewery</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>ISA_RawGrapes</li>
					</thingDefs>
				</filter>
				<count>25</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>ISA_RawGrapes</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<ISA_MustWine>5</ISA_MustWine>
		</products>
		<researchPrerequisites>
			<li>Brewing</li>
		</researchPrerequisites>
	</RecipeDef>

