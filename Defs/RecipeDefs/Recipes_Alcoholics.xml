				<filter>
					<thingDefs>
						<li>RawBerries</li>
					</thingDefs>
				</filter>
				<count>25</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>RawBerries</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<ISA_MustWine_Berry>5</ISA_MustWine_Berry>
		</products>
		<researchPrerequisites>
			<li>Brewing</li>
		</researchPrerequisites>
	</RecipeDef>

</Defs>
