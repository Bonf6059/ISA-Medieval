<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- ============= Buildings ============= -->

<!--1x3 Bench Base-->
	
	<ThingDef ParentName="BenchBase" Name="ISA_1X3WorkbenchBase" Abstract="True">
		<altitudeLayer>Building</altitudeLayer>
		<fillPercent>0.5</fillPercent>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<WorkToBuild>2000</WorkToBuild>
			<MaxHitPoints>180</MaxHitPoints>
			<Flammability>1.0</Flammability>
		</statBases>
		<size>(3,1)</size>
		<designationCategory>Production</designationCategory>
		<passability>PassThroughOnly</passability>
		<pathCost>50</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<surfaceType>Item</surfaceType>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<techLevel>Medieval</techLevel>
		<placeWorkers>
			<li>PlaceWorker_PreventInteractionSpotOverlap</li>
		</placeWorkers>
		<minifiedDef>MinifiedThing</minifiedDef>
	</ThingDef>

  <!-- ============= Rugs and Carpets ============= -->
	
	<ThingDef Name="ISA_FurnitureBaseRug" ParentName="BuildingBase" Abstract="True">
		<altitudeLayer>FloorCoverings</altitudeLayer>
		<wipesPlants>true</wipesPlants>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsFurniture</li>
		</thingCategories>

		<selectable>true</selectable>
		<useHitPoints>true</useHitPoints>
    	<defaultPlacingRot>North</defaultPlacingRot>
		<blocksAltitudes>
			<li>FloorCoverings</li>
		</blocksAltitudes>
		<building>
			<isEdifice>false</isEdifice>
		</building>
		<rotatable>true</rotatable>
		<designationCategory>Floors</designationCategory>
		<researchPrerequisites>
			<li>ComplexClothing</li>
		</researchPrerequisites>

	</ThingDef>

	<!-- Patched Rug Base -->
	
	<ThingDef Name="ISA_PatchedRugBase" ParentName="ISA_FurnitureBaseRug" Abstract="True">
		<recipeMaker>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
			<effectWorking>Tailor</effectWorking>
			<soundWorking>Recipe_Tailor</soundWorking>
			<recipeUsers>
				<li>HandTailoringBench</li>
				<li>ElectricTailoringBench</li>
			</recipeUsers>
		</recipeMaker>
		<comps>
			<li>
				<compClass>CompQuality</compClass>
			</li>
		</comps>
	</ThingDef>

	<!-- Patched Cloth Rug Base -->
	
	<ThingDef Name="ISA_RugPatched_ClothBase" ParentName="ISA_PatchedRugBase" Abstract="True">
		<stuffCategories>
			<li>Fabric</li>
		</stuffCategories>
		<designatorDropdown>ISA_RugPatchedCloth</designatorDropdown>
	</ThingDef>

	<!-- Royal Rugs Base -->
	
	<ThingDef Name="ISA_RugRoyalBase" ParentName="ISA_PatchedRugBase" Abstract="True">
		<researchPrerequisites>
			<li>CarpetMaking</li>
		</researchPrerequisites>
		<designatorDropdown>ISA_RugRoyal</designatorDropdown>
	</ThingDef>

	<!-- Animal Rugs Base -->
	
	<ThingDef Name="ISA_RugAnimalBase" ParentName="ISA_FurnitureBaseRug" Abstract="True">
		<designatorDropdown>ISA_RugAnimal</designatorDropdown>
	</ThingDef>
	
</Defs>
