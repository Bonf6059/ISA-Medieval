	<!-- ===== Presser ===== -->
	<ThingDef ParentName="BuildingBase">
		<defName>ISA_Presser</defName>
		<label>cheese press</label>
		<description>A wooden contraption to press selected items. Either to bring the juice out or whey from curds.</description>
		<drawerType>MapMeshAndRealTime</drawerType>
		<graphicData>
			<drawSize>(2,2)</drawSize>
			<texPath>Building/Production/CheesePress/CheesePress</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<shadowData>
				<volume>(0.75, 0.35, 0.33)</volume>
			</shadowData>
		</graphicData>
		<neverMultiSelect>true</neverMultiSelect>
		<fillPercent>0.45</fillPercent>
		<pathCost>60</pathCost>
		<statBases>
			<WorkToBuild>600</WorkToBuild>
			<Mass>10</Mass>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1.0</Flammability>
		</statBases>
		<costList>
			<Steel>10</Steel>
		</costList>
		<stuffCategories>
			<li>Woody</li>
		</stuffCategories>
		<costStuffCount>30</costStuffCount>
		<hasInteractionCell>False</hasInteractionCell>
		<!-- <interactionCellOffset>(0,0,-1)</interactionCellOffset> -->
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<building>
			<buildingTags>
				<li>Production</li>
			</buildingTags>
		</building>
		<size>(2,1)</size>
		<thingClass>Building_WorkTable</thingClass>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
			<li Class="ProcessorFramework.CompProperties_Processor">
				<capacity>100</capacity>
				<independentProcesses>false</independentProcesses>
				<parallelProcesses>false</parallelProcesses>
				<dropIngredients>true</dropIngredients>
				<showProductIcon>true</showProductIcon>
				<barOffset>(0.0, 0.25)</barOffset>
				<barScale>(1.0, 1.0)</barScale>
				<colorCoded>false</colorCoded>
				<processes>
					<li>ISA_MilkIntoCheese</li>
					<li>ISA_SheepMilkIntoCheese</li>
					<li>ISA_GoatMilkIntoCheese</li>
					<li MayRequire="Van.Beasts">ISA_MufftonMilkIntoCheese</li>
					<li MayRequire="Van.Beasts">ISA_GoldiloxMilkIntoCheese</li>
					<li>ISA_AppleIntoJuice</li>
				</processes>
			</li>
		</comps>
		<tickerType>Rare</tickerType>
		<designationCategory>Production</designationCategory>
		<researchPrerequisites>
			<li>ISA_PresserResearch</li>
		</researchPrerequisites>
	</ThingDef>

	<!-- ===== Stew Pot ===== -->
	
	<ThingDef ParentName="BuildingBase">
		<defName>ISA_StewPot</defName>
		<label>stew pot</label>
		<description>A wood-fired stove with a top side perfectly indented for a large pot. The lack of need for electricity means this cooking apparatus is perfect for the rugged outdoorsman or medieval peasant alike. Stews are heartier and easier to cook than proper soups. Stews often meld into a singular flavor over long periods of time, perfect for gamey or “less enticing” meat products.\n\nThis building gives off a significant amount of heat.\n\nStew is slightly less nutrition-efficient than Soup, but requires only 2 days of cook time as opposed to Soup's 3.\n\n\As with most fueled buildings, this building consumes extra fuel when rained on. Keep it underneath a roof; remember that you can extend roofs past a wall without forming an enclosed room.</description>
		<drawerType>MapMeshAndRealTime</drawerType>
		
		<graphicData>
			<texPath>Building/Production/StewPot/ISA_StewPot</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(1.5,1.5)</drawSize>
			<shaderType>CutoutComplex</shaderType>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<costList>
			<Steel>50</Steel>
			<WoodLog>20</WoodLog>
		</costList>
		<altitudeLayer>Building</altitudeLayer>
		<rotatable>true</rotatable>
		<neverMultiSelect>true</neverMultiSelect>
		<uiIconScale>0.8</uiIconScale>
		<fillPercent>0.5</fillPercent>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<WorkToBuild>600</WorkToBuild>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1.0</Flammability>
		</statBases>
	        <building>
	          <isMealSource>true</isMealSource>
	          <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
	          <heatPerTickWhileWorking>0.10</heatPerTickWhileWorking>
	        </building>
		<tickerType>Normal</tickerType>
		<size>(1,1)</size>
		<designationCategory>Production</designationCategory>
		<passability>PassThroughOnly</passability>
		<pathCost>70</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<surfaceType>Item</surfaceType>
		<comps>
			<li Class="CompProperties_Forbiddable"/>
			<li Class="ProcessorFramework.CompProperties_Processor">
				<capacity>1</capacity>
				<independentProcesses>false</independentProcesses>
				<parallelProcesses>false</parallelProcesses>
				<dropIngredients>false</dropIngredients>
				<showProductIcon>false</showProductIcon>
				<barOffset>(0.0, 0.25)</barOffset>
				<barScale>(1.0, 1.0)</barScale>
				<colorCoded>false</colorCoded>
				<processes>
					<li>ISA_Stew</li>
					<li>ISA_Soup</li>
				</processes>
			</li>	
			<li Class="CompProperties_Refuelable">
				<fuelConsumptionRate>3</fuelConsumptionRate>
				<fuelCapacity>20.0</fuelCapacity>
				<fuelConsumptionPerTickInRain>0.0006</fuelConsumptionPerTickInRain>
				<fuelFilter>
					<thingDefs>
						<li>WoodLog</li>
						<li>ISA_Coal</li>
					</thingDefs>
				</fuelFilter>
				<initialFuelPercent>1</initialFuelPercent>
				<showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
				<consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
			</li>
			
			<li Class="CompProperties_HeatPusher">
				<compClass>CompHeatPusherPowered</compClass>
				<heatPerSecond>6</heatPerSecond>
				<heatPushMaxTemperature>36</heatPushMaxTemperature>
			</li>
			<li Class="CompProperties_Glower">
				<glowRadius>3</glowRadius>
				<glowColor>(244, 112, 42,0)</glowColor>
			</li>
		</comps>
		<researchPrerequisites>
			<li>ISA_AdvancedCookingResearch</li>
		</researchPrerequisites>
	</ThingDef>

	<!-- CrabBay -->

	<ThingDef ParentName="BuildingBase">
		<defName>CrabBay</defName>
		<label>crab bay</label>
		<description>A small, closed-off area of water used to breed a variant of leviatan crabs. The netting prevents any predators from snatching the crabs.\n\nMust be regularly replenished with kibble.</description>
		<drawerType>MapMeshAndRealTime</drawerType>
		<graphicData>
			<drawSize>(5,5)</drawSize>
			<texPath>Building/Production/CrabBay/CrabBay</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<thingCategories>
			<li>BuildingsSpecial</li>
		</thingCategories>
		<costList>
			<WoodLog>400</WoodLog>
			<DA_EmperorPearls>1</DA_EmperorPearls>
		</costList>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<costStuffCount>100</costStuffCount>
		<building>
			<destroySound>BuildingDestroyed_Wood_Big</destroySound>
		</building>
		<researchPrerequisites>
			<li>Fishing</li>
		</researchPrerequisites>
		<comps>
			<li Class="CompProperties_Breakdownable" />
			<li Class="CompProperties_Forbiddable"/>
			<li Class="ProcessorFramework.CompProperties_Processor">
				<capacity>100</capacity>
				<independentProcesses>false</independentProcesses>
				<parallelProcesses>false</parallelProcesses>
				<dropIngredients>false</dropIngredients>
				<showProductIcon>false</showProductIcon>
				<barOffset>(0.0, 0.25)</barOffset>
				<barScale>(1.0, 1.0)</barScale>
				<colorCoded>false</colorCoded>
				<processes>
					<li>ISA_CrabMeat</li>
					<li>ISA_CrabChitin</li>
				<!--	<li>ISA_CrabPearl</li>	-->
				</processes>
			</li>	
		</comps>
		<altitudeLayer>Building</altitudeLayer>
		<statBases>
			<MarketValue>1500</MarketValue>
			<MaxHitPoints>200</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<Beauty>-10</Beauty>
			<Mass>35</Mass>
			<WorkToBuild>8000</WorkToBuild>
		</statBases>
		<tickerType>Rare</tickerType>
		<size>(3, 3)</size>
		<fillPercent>1.0</fillPercent>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<terrainAffordanceNeeded>Bridgeable</terrainAffordanceNeeded>
		<passability>Impassable</passability>
		<rotatable>true</rotatable>
		<canOverlapZones>true</canOverlapZones>
		<minifiedDef>MinifiedThing</minifiedDef>
		<tradeability>Sellable</tradeability>
		<designationCategory>Production</designationCategory>
	</ThingDef>

  	<!--Drying rack-->
  
	<ThingDef ParentName="BuildingBase">
		<defName>ISA_DryingRack_Small</defName>
		<label>drying rack (1x2)</label>
		<description>A wooden rack to dry goods under the sun to dehydrate and preserve them for a longer shelf life.</description>
		<drawerType>MapMeshAndRealTime</drawerType>
		<graphicData>
			<texPath>Building/Production/DryingRack/DryingRackEmpty/DryingRackSmall</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(3,3)</drawSize>
			<damageData>
				<rect>(0.05,0.1,0.9,0.9)</rect>
			</damageData>
		</graphicData>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<altitudeLayer>Building</altitudeLayer>
		<canBeUsedUnderRoof>false</canBeUsedUnderRoof>
		<passability>PassThroughOnly</passability>
		<fillPercent>0.5</fillPercent>
		<pathCost>70</pathCost>
		<statBases>
			<WorkToBuild>500</WorkToBuild>
			<Mass>5</Mass>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1.0</Flammability>
		</statBases>
		<size>(2,1)</size>
		<stuffCategories>
			<li>WoodLog</li>
		</stuffCategories>
		<costStuffCount>50</costStuffCount>
		<thingClass>Building_WorkTable</thingClass>
		<comps>
			<li Class="ProcessorFramework.CompProperties_Processor">
				<capacity>100</capacity>
				<independentProcesses>false</independentProcesses>
				<parallelProcesses>false</parallelProcesses>
				<dropIngredients>true</dropIngredients>
				<showProductIcon>true</showProductIcon>
				<barOffset>(0.0, 0.25)</barOffset>
				<barScale>(1.0, 1.0)</barScale>
				<colorCoded>false</colorCoded>
