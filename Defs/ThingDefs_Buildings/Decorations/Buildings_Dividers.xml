<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!--======================================== Divider ========================================-->
	<!-- Thin Divider -->
	<ThingDef ParentName="FurnitureWithQualityBase">
		<defName>ISA_RusticRoomDivider1x2c</defName>
		<label>room divider (1x2)</label>
		<description>A basic room divider that keeps the privacy of your pawns.</description>
		<graphicData>
			<texPath>Building/Furnitures/Decorations/Dividers/RoomDivider1x2</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(3.5,2)</drawSize>
		</graphicData>
		<size>(2,1)</size>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<castEdgeShadows>true</castEdgeShadows>
		<fillPercent>0.6</fillPercent>
		<minifiedDef>MinifiedThing</minifiedDef>
		<canOverlapZones>false</canOverlapZones>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<thingCategories>
			<li>BuildingsMisc</li>
		</thingCategories>
		<statBases>
			<MaxHitPoints>80</MaxHitPoints>
			<WorkToBuild>2500</WorkToBuild>
			<Mass>20</Mass>
			<Flammability>1.0</Flammability>
			<Beauty>5</Beauty>
			<StyleDominance MayRequire="Ludeon.RimWorld.Ideology">8</StyleDominance>
		</statBases>
		<stuffCategories>
			<li>Woody</li>
		</stuffCategories>
		<costStuffCount>50</costStuffCount>
		<constructionSkillPrerequisite>3</constructionSkillPrerequisite>
		<designationCategory>Furniture</designationCategory>
	</ThingDef>	

