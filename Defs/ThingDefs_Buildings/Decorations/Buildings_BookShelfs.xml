<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!--============================== Bookshelf ==============================-->
	
	<ThingDef ParentName="FurnitureWithQualityBase" Name="ISA_RusticBookshelf">
		<defName>ISA_RusticBookshelf</defName>
		<label>small bookshelf</label>
		<description>Increases research speed when placed near research table. Each research bench can  use two small research shelves.</description>
		<graphicData>
			<texPath>Things/Building/Furniture/RusticBookshelf1x1</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>3</drawSize>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<thingClass>Building</thingClass>
		<uiIconScale>0.5</uiIconScale>
		<uiIconOffset>(0, 0.15)</uiIconOffset>
		<size>(1,1)</size>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<castEdgeShadows>true</castEdgeShadows>
		<fillPercent>0.6</fillPercent>
		<minifiedDef>MinifiedThing</minifiedDef>
		<canOverlapZones>false</canOverlapZones>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<thingCategories>
			<li>BuildingsMisc</li>
		</thingCategories>
		<statBases>
			<MaxHitPoints>120</MaxHitPoints>
			<WorkToBuild>2500</WorkToBuild>
			<Mass>40</Mass>
			<Flammability>1.0</Flammability>
			<Beauty>5</Beauty>
			<StyleDominance MayRequire="Ludeon.RimWorld.Ideology">8</StyleDominance>
		</statBases>
		<costList>
			<Cloth>40</Cloth>
		</costList>
		<pathCost>50</pathCost>
		<stuffCategories>
			<li>Woody</li>
		</stuffCategories>
		<costStuffCount>50</costStuffCount>
		<comps>
			<li Class="CompProperties_Facility">
				<statOffsets>
					<ResearchSpeedFactor>0.05</ResearchSpeedFactor>
				</statOffsets>
				<maxDistance>5</maxDistance>
				<maxSimultaneous>2</maxSimultaneous>
			</li>
		</comps>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
		</placeWorkers>
		<constructionSkillPrerequisite>5</constructionSkillPrerequisite>
		<designationCategory>Furniture</designationCategory>
		<building>
			<preventDeteriorationOnTop>true</preventDeteriorationOnTop>
			<ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
			<maxItemsInCell>3</maxItemsInCell>
			<storageGroupTag>Shelf</storageGroupTag>
			<blueprintClass>Blueprint_Storage</blueprintClass>
			<fixedStorageSettings>
				<filter>
					<disallowNotEverStorable>true</disallowNotEverStorable>
					<categories>
						<li>BuildingsBook</li>
					</categories>
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<priority>Preferred</priority>
				<filter>
					<categories>
						<li>BuildingsBook</li>
					</categories>
				</filter>
			</defaultStorageSettings>
			<paintable>true</paintable>
		</building>
	</ThingDef>

