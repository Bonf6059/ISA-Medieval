<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<!-- Mushrooms -->
	
		<Operation Class="PatchOperationSequence">
		<success>Always</success>
				<operations>
					<li Class="PatchOperationReplace">
						<xpath>/Defs/ThingDef[defName="Glowstool"]/plant/fertilitySensitivity</xpath>
						<value>
							<fertilitySensitivity>0</fertilitySensitivity>
						</value>
					</li>
					<li Class="PatchOperationReplace">
						<xpath>/Defs/ThingDef[defName="Glowstool"]/plant/growDays</xpath>
						<value>
							<growDays>10</growDays>
						</value>
					</li>
					<li Class="PatchOperationAdd">
						<xpath>/Defs/ThingDef[defName="Glowstool"]/plant/sowTags</xpath>
						<value>
							<li>Ground</li>
						</value>
					</li>

				<!-- Con vanilla expanded mushrooms installata -->
					
					<li MayRequire="VanillaExpanded.VPlantsEMushrooms" Class="PatchOperationAdd">
						<xpath>/Defs/ThingDef[defName="Glowstool"]/plant/sowTags</xpath>
						<value>
							<li>VPE_Mushroom</li>
						</value>
					</li>
					
					<li MayRequire="VanillaExpanded.VPlantsEMushrooms" Class="PatchOperationReplace">
						<xpath>/Defs/ThingDef[defName="Glowstool"]/plant/fertilityMin</xpath>
						<value>
							<fertilityMin>0</fertilityMin>
						</value>
					</li>	     
				</operations>
			</Operation>

		<!-- Animals -->


		<Operation Class="PatchOperationSequence">
		<success>Always</success>
				<operations>
					<li Class="PatchOperationAdd">
						<xpath>/Defs/ThingDef[defName="Sheep"]/comps</xpath>
						<value>
							<li Class="CompProperties_Milkable">
   							<milkDef>ISA_SheepMilk</milkDef>
  							<milkIntervalDays>3</milkIntervalDays>
   							<milkAmount>15</milkAmount>
    						</li>
						</value>
					</li>
					<li Class="PatchOperationReplace">
						<xpath>/Defs/ThingDef[defName="Goat"]/comps</xpath>
						<value>
							<comps>
							<li Class="CompProperties_Milkable">
   							<milkDef>ISA_GoatMilk</milkDef>
  							<milkIntervalDays>3</milkIntervalDays>
   							<milkAmount>12</milkAmount>
    						</li>
							</comps>
						</value>
					</li>

					<!-- Plants -->
					
					<li Class="PatchOperationAdd">
						<xpath>/Defs/ThingDef[defName="Plant_Haygrass"]</xpath>
						<value>
							<modExtensions>
								<li Class="VEF.Plants.DualCropExtension">
									<secondaryOutput>ISA_Flour</secondaryOutput>
									<outPutAmount>7</outPutAmount>
								</li>
							</modExtensions>
						</value>
					</li>	     
				</operations>
			</Operation>
	
</Patch>
