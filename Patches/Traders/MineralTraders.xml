<?xml version="1.0" encoding="utf-8"?>
<Patch>

<!--========== TRADERS ==========-->

<Operation MayRequire="ISA.RandomPatches" Class="PatchOperationSequence">
 <!-- <success>Always</success>  -->
    <operations>
      <!-- Add new caravan -->      <!-- Thank you Criz#2714 for the help with this patch -->

      <li Class="PatchOperationAdd" MayRequire="OskarPotocki.VFE.Medieval2">
        <xpath>/Defs/FactionDef[@Name="VFEM2_VikingBase"]/caravanTraderKinds</xpath>
        <value>
        <li>ISA_Caravan_Minerals</li>
        </value>
      </li>

      <li Class="PatchOperationAdd" MayRequire="OskarPotocki.VFE.Medieval2">
        <xpath>/Defs/FactionDef[@Name="VFEM2_MedievalFactionBase"]/caravanTraderKinds</xpath>
        <value>
        <li>ISA_Caravan_Minerals</li>
        </value>
      </li>

<!-- Addons to the stock generator  -->

      <li Class="PatchOperationAdd">
        <xpath>/Defs/TraderKindDef[defName="ISA_Caravan_Minerals"]/stockGenerators</xpath>
        <value>
          
          <li Class="StockGenerator_SingleDef">
            <thingDef>ISA_Criopyrinth</thingDef>
            <countRange>-10~84</countRange>
          </li>

        </value>
      </li>

      <li Class="PatchOperationAdd">
        <xpath>/Defs/TraderKindDef[defName="ISA_Orbital_Minerals"]/stockGenerators</xpath>
        <value>
          
          <li Class="StockGenerator_SingleDef">
            <thingDef>ISA_Criopyrinth</thingDef>
            <countRange>-10~95</countRange>
          </li>

        </value>
      </li>

  </operations>
</Operation>

</Patch>
