<?xml version="1.0" encoding="utf-8"?>
<Patch>

<!-- Electric & Fueled stove -->

<!-- Uncooked Stew -->
	
  <Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName= "ElectricStove"]/recipes</xpath>
		<value>
  			<li>ISA_MakeUncookedStew</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName= "FueledStove"]/recipes</xpath>
		<value>
  			<li>ISA_MakeUncookedStew</li>
		</value>
	</Operation>

<!-- Uncooked Soup -->
	
  <Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName= "ElectricStove"]/recipes</xpath>
		<value>
  			<li>ISA_MakeUncookedSoup</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName= "FueledStove"]/recipes</xpath>
		<value>
  			<li>ISA_MakeUncookedSoup</li>
		</value>
	</Operation>

<!-- Add wine and cider Fermenting Barrel -->
	
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="BarrelProcessor"]/comps/li[1]/processes</xpath>
		<value>
			<li>ISA_MustIntoWine</li>
			<li>ISA_MustIntoBerryWine</li>
			<li>ISA_AppleJuiceIntoCider</li>
		</value>
	</Operation>
	
</Patch>
