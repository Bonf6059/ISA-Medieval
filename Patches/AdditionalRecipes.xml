<?xml version="1.0" encoding="utf-8"?>
<Patch>

<!-- Electric & Fueled stove -->

<!-- Uncooked Stew -->
	
  <Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName= "ElectricStove"]/recipes</xpath>
		<value>
  			<li>ISA_MakeUncookedStew</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName= "FueledStove"]/recipes</xpath>
		<value>
  			<li>ISA_MakeUncookedStew</li>
		</value>
	</Operation>

<!-- Uncooked Soup -->
	
  <Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName= "ElectricStove"]/recipes</xpath>
		<value>
  			<li>ISA_MakeUncookedSoup</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName= "FueledStove"]/recipes</xpath>
		<value>
  			<li>ISA_MakeUncookedSoup</li>
		</value>
	</Operation>

<!-- Add sheep and goat milk to vanilla recipes a std -->

	<Operation Class="PatchOperationConditional">
		<xpath>Defs/RecipeDef[contains(.,'Milk')]/ingredients/li[contains(.,'Milk')]/filter/thingDefs</xpath>
		<match Class="PatchOperationAdd">
			<xpath>Defs/RecipeDef[contains(.,'Milk')]/ingredients/li[contains(.,'Milk')]/filter/thingDefs</xpath>
			<value>
				<li>ISA_SheepMilk</li>
				<li>ISA_GoatMilk</li>
			</value>
		</match>
	</Operation>
	
	<Operation Class="PatchOperationConditional">
		<xpath>Defs/RecipeDef[contains(.,'Milk')]/fixedIngredientFilter/thingDefs/li[.="Milk"]</xpath>
		<match Class="PatchOperationAdd">
			<xpath>Defs/RecipeDef[contains(.,'Milk')]/fixedIngredientFilter/thingDefs</xpath>
			<value>
				<li>ISA_SheepMilk</li>
				<li>ISA_GoatMilk</li>
			</value>
		</match>
	</Operation>
	
	<Operation Class="PatchOperationConditional">
		<xpath>Defs/RecipeDef[contains(.,'Milk')]/defaultIngredientFilter/thingDefs/li[.="Milk"]</xpath>
		<match Class="PatchOperationAdd">
			<xpath>Defs/RecipeDef[contains(.,'Milk')]/defaultIngredientFilter/thingDefs</xpath>
			<value>
				<li>ISA_SheepMilk</li>
				<li>ISA_GoatMilk</li>
			</value>
		</match>
	</Operation>

</Patch>
