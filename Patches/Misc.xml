<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<!-- Add coal as a fuel source to everything except passive cooler -->
  
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[not (defName="PassiveCooler")]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/thingDefs<!--[li="WoodLog"]/li--></xpath>
		<value>
			<li>ISA_Coal</li>
		</value>
	</Operation>

<!-- Replaces hard leather with generic leathery material -->
	
	<Operation Class="PatchOperationRemove" MayRequire="OskarPotocki.VFE.Medieval2">
		<xpath>/Defs/ThingDef[defName="VFEM2_ForgeBellows"]/costList/VFEM2_HardLeather</xpath>
	</Operation>

	<Operation Class="PatchOperationAdd">
   		<xpath>/Defs/ThingDef[defName="VFEM2_ForgeBellows"]/costList</xpath>
   		<value>
    		<stuffCategories>
				<li>Leathery</li>
   			</stuffCategories>
    	</value>
  	</Operation>
	
</Patch>
