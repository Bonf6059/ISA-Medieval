<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<!-- Herbal Powder by detvisor -->
	
	<Operation MayRequire="det.battlemeds,OskarPotocki.VFE.Medieval2" Class="PatchOperationAdd">
		<xpath>/Defs/RecipeDef[defName="HerbalPowder"]/recipeMaker/recipeUsers</xpath>
			<value>
				<li>VFEM2_AlchemicalWorkbench</li>
			</value>
	</Operation>

<!-- Kumis by lambda -->
	
	<Operation MayRequire="Van.Beasts,lambda.Kumis" Class="PatchOperationAdd">
		<xpath>/Defs/RecipeDef[defName="lambda_MakeUnfermentedKumus"]/ingredients/li/filter/thingDefs</xpath>
			<value>
				<li>DA_MufftonMilk</li>
			</value>
	</Operation>
	<Operation MayRequire="Van.Beasts,lambda.Kumis" Class="PatchOperationAdd">
		<xpath>/Defs/RecipeDef[defName="lambda_MakeUnfermentedKumus"]/fixedIngredientFilter/thingDefs</xpath>
			<value>
				<li>DA_MufftonMilk</li>
			</value>
	</Operation>
	<Operation MayRequire="Van.Beasts,lambda.Kumis" Class="PatchOperationAdd">
		<xpath>/Defs/RecipeDef[defName="lambda_MakeUnfermentedKumus"]/defaultIngredientFilter/thingDefs</xpath>
			<value>
				<li>DA_MufftonMilk</li>
			</value>
	</Operation>

</Patch>
