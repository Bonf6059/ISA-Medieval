<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<!-- Replaces hard leather with generic leathery material -->
	
	<Operation Class="PatchOperationRemove">
		<xpath>/Defs/ThingDef[defName="VFEM2_ForgeBellows"]/costList/VFEM2_HardLeather</xpath>
	</Operation>

	<Operation Class="PatchOperationAdd">
   		<xpath>/Defs/ThingDef[defName="VFEM2_ForgeBellows"]</xpath>
   		<value>
    		<stuffCategories>
				<li>Leathery</li>
   			</stuffCategories>
    	</value>
  	</Operation>
	
</Patch>
